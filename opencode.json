{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp?apiKey={env:REF_API_KEY}",
      "enabled": true
    }
  }
}
